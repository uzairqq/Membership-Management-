@using Membersips.Areas.Admin.Models
@model IEnumerable<Membersips.Models.Item>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.Partial("_CreateButtonPartialView")
</p>
<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Html)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WaitDays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFree)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Html)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WaitDays)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFree)
        </td>
        <td>
            @Html.Partial("_TableButtonPartial",new SmallButtonModel
            {
                Id = item.Id
            })
        </td>
    </tr>
}

</table>
